<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Página Inicial</title>
</head>
<body>
  <section>
    <div>
      {{--
        This tag let us know if the current user is logged in or not.

        ref: http://adonisjs.com/docs/4.0/views#_loggedin
        ref: http://adonisjs.com/docs/4.0/authentication#_loggedin
      --}}
      @loggedIn
        <p> Bem vindo, {{ auth.user.nomeUsuario }} </p>
        @if(auth.user.idPerfil==1)
        <h2>Pendências de Cadastro de Usuário</h2>
          <table>
            @each(user in obj.up)
              <tr>
              <th>{{user.nomeUsuario}}</th>
              <th>{{user.email}}
              <th>{{user.matricula}}</th>
              <th>{{user.nomePerfil}}</th>
              <th>{{ user.statusUsuario}}</th>
              <th><form method="POST" action="{{route(`home/:${user.idUsuario}`)}}"><button type="Submit" class="btn btn-primary">Aceitar</button></form></th>
              <th><form method="POST" action="{{route('home.postDeny')}}"><button type="Submit" class="btn btn-primary">Recusar</button></form></th>
              </tr>
            @endeach
          </table>
        @endif
      @endloggedIn
    </div>
  </section>
</body>
</html>
